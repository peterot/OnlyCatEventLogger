<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.onlycat.eventlogger</string>

    <key>ProgramArguments</key>
    <array>
      <string>/usr/bin/java</string>
      <string>-jar</string>
      <string>/Applications/OnlyCatEventLogger/OnlyCatEventLogger.jar</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Applications/OnlyCatEventLogger</string>

    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Library/Logs/OnlyCatEventLogger.out.log</string>
    <key>StandardErrorPath</key>
    <string>/Library/Logs/OnlyCatEventLogger.err.log</string>
  </dict>
</plist>
